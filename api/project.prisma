datasource db {
  provider = "sqlite"
  url      = "file:db/dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model User {
  id        Int       @id
  username  String    @unique
  name      String?
}

model Document {
  id        Int       @id
  name      String
  path      String    @unique
  content   String?
  user      User
  comments  Comment[]
}

model Comment {
  id        Int       @id
  user      User
  comment   String
  createdAt DateTime
  updatedAt DateTime
}
